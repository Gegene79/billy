
events {}
http {

    server {
        listen 80 default_server;
        include locations.conf

        location ~ /.well-known/acme-challenge {
            default_type "text/plain";
            allow all;
            root /certbot;
        } 
    }

    server {
        listen 443 ssl;
        server_name home.petitbilly.net;
        
        root /usr/share/nginx/html;
        include  /etc/nginx/mime.types;
        error_page 401 = @error401;

        ssl_certificate /letsencrypt/live/home.petitbilly.net/fullchain.pem;
        ssl_certificate_key /letsencrypt/live/home.petitbilly.net/privkey.pem;
        include /letsencrypt/options-ssl-nginx.conf;
        ssl_dhparam /letsencrypt/ssl-dhparams.pem;

        
    }
}